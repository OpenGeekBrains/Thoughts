{
  "Database": "SqlServer",
  "DbRemoveBefore": true,
  "DbInitializeTestData": true,
  "CountPostsOnHomeView": 6,
  "LengthTextOnHomeView": 60,
  "ConnectionStrings": {
    "Sqlite": "Filename=ThoughtsData.db",
    "SqliteInMemory": "Filename=:memory:",
    "SqlServer": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ThoughtsData.DB",
    "IdentitySqlServer": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=IdentityData.DB",
    "FileStorageServer": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=ThoughtsFileStorage.DB"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "WebApiUrl": "http://localhost:5001",
  "UploadFileOptions": {
    "StoredFilesPath": ".\\files\\",
    "PermittedExtensions": [ ".txt", ".pdf", ".png", ".jpg", ".jpeg", ".gif", ".zip" ],
    "FileSizeLimit": 107374182400
  }
}
