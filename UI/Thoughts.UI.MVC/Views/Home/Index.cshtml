@model HomeIndexWebModel
@{
    ViewBag.Title = "Блог";
}

<!-- Section - список заметок блога, домашняя страница -->
<header class="major">
    <h1>@ViewBag.Title</h1>
</header>

<div class="posts">
    @foreach (var e in Model.Posts)
    {
        <article>
            <h3>@e.Title</h3>
            <p>Дата: @e.Date.ToString("dd.MM.yyyy")</p>
            <rawhtml>@e.Body</rawhtml>
            <p>Автор: @e.User.NickName</p>
            <ul class="actions">
                <li><a asp-controller="Blog" asp-action="Details" asp-route-id="@e.Id" class="button">Подробнее ...</a></li>
            </ul>
        </article>
    }
</div>
