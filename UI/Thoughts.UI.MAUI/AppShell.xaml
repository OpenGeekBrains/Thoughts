<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Thoughts.UI.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Thoughts.UI.MAUI.Views"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Главная">
            <ShellContent Title="Главная"
                          ContentTemplate="{DataTemplate views:MainPage}"
                          Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Погода">
            <ShellContent Title="Погода"
                          ContentTemplate="{DataTemplate views:WeatherInfosPage}"
                          Route="WeatherInfosPage" />
    </FlyoutItem>

    <FlyoutItem Title="Блоги">
            <ShellContent Title="Блоги"
                          ContentTemplate="{DataTemplate views:BlogsPage}"
                          Route="BlogsPage" />

    </FlyoutItem>

    <FlyoutItem Title="Файлы">
        <ShellContent Title="Файлы"
                      ContentTemplate="{DataTemplate views:FilePage}"
                      Route="FilePage" />

    </FlyoutItem>
</Shell>