<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:Thoughts.UI.WPF.Views"
                    xmlns:vm ="clr-namespace:Thoughts.UI.WPF.ViewModels">

    <DataTemplate DataType="{x:Type vm:RecordsViewModel}">
        <views:RecordsView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:FilesViewModel}">
        <views:FilesView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:UsersViewModel}">
        <views:UsersView/>
    </DataTemplate>
</ResourceDictionary>